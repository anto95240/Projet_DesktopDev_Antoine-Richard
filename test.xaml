<Window x:Class="Projet_DesktopDev_Antoine_Richard.test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Game Collector" Height="582" Width="930"
        Background="#112244">
    <Grid>
        <!-- Définition des colonnes -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Menu latéral -->
            <ColumnDefinition Width="*"/>
            <!-- Contenu principal -->
        </Grid.ColumnDefinitions>

        <!-- Menu latéral -->
        <Grid Background="#173067" Width="200" HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Top" Margin="10">
                <Image Source="Images/logo.png" Width="100" Height="100" HorizontalAlignment="Center" />
                <Button Content="Accueil" Margin="0,50,0,0" Width="150" Height="40"
                    Background="#083496" Foreground="White" FontWeight="Bold" BorderThickness="0" />
                <Button Content="Gestion Jeux" Margin="0,20,0,0" Width="150" Height="40"
                    Background="#083496" Foreground="White" FontWeight="Bold" BorderThickness="0" />
            </StackPanel>
        </Grid>

        <!-- Contenu principal -->
        <Grid Grid.Column="1">
            <!-- Définition des lignes -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Barre de recherche -->
                <RowDefinition Height="80"/>
                <!-- Boutons de filtres -->
                <RowDefinition Height="*"/>
                <!-- Grille des jeux -->
                <RowDefinition Height="50"/>
                <!-- Bouton Ajouter -->
            </Grid.RowDefinitions>

            <!-- Barre de recherche -->
            <Grid Grid.Row="0">
                <TextBlock Text="GameCollector" Foreground="White" FontSize="18" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" />
                <TextBox Width="200" Height="30" HorizontalAlignment="Right" Margin="0,0,20,0"
                         VerticalAlignment="Center" Background="#ddd" BorderThickness="0"
                         Padding="5" Text="Recherche..." />
            </Grid>

            <!-- Boutons de filtres -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Filters}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Name}" Width="80" Height="30" Margin="5"
                                Background="{Binding Color}" Foreground="White" BorderThickness="0" FontWeight="Bold"
                                Command="{Binding DataContext.FilterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding Name}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Grille des jeux -->
            <ItemsControl Grid.Row="2" ItemsSource="{Binding Games}" Margin="20,10,20,10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1122AA" CornerRadius="10" Padding="10" Margin="10" BorderThickness="0">
                            <StackPanel>
                                <!-- Image placeholder -->
                                <Rectangle Fill="Gray" Width="100" Height="100" HorizontalAlignment="Center" />

                                <!-- Détails -->
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="14" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0" />
                                <TextBlock Text="{Binding Genre}" Foreground="Gray" FontSize="12" TextAlignment="Center" />
                                <TextBlock Text="{Binding Year}" Foreground="DarkGray" FontSize="12" TextAlignment="Center" />

                                <!-- Bouton détail -->
                                <Button Content="Détail" Width="80" Height="30" Margin="0,20,0,0"
                                        HorizontalAlignment="Center" Background="#083496" Foreground="White" BorderThickness="0"
                                        Command="{Binding DataContext.DetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Id}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Bouton Ajouter -->
            <Button Grid.Row="3" Content="Ajouter" Width="100" Height="30" HorizontalAlignment="Right" Margin="10"
                    Background="#FF0EB33B" Foreground="Black" FontWeight="Bold" BorderThickness="0" />
        </Grid>
    </Grid>
</Window>
